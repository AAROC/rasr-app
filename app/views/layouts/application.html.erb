<!DOCTYPE html>
<html>
  <head>
    <title>RASR - Reproducible Automatic Speech Recognition</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
      <nav class="navbar navbar-fixed-top navbar-inverse">
        <div class="container container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/"><%= link_to image_tag("logo.png"), "/", :class => "img img-circle" %></a>
          </div>
        <div nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to('Home', 'home', class: "btn") %></li>
            <li><%= link_to("Help", 'help', class: "btn") %></li>
            <% if user_signed_in? %>
            <li>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            </li>
            <% else %>
            <li>
              <%= link_to('Login', new_user_session_path, class: "btn")  %>
            </li>
            <% end %>
          </ul>
      </div>
    </nav>
    <div class="container">
    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>

  </div>
  </body>
</html>
